<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.crowdaid.controller.AuthController"
      alignment="CENTER" spacing="20" styleClass="root"
      stylesheets="@../css/styles.css">
    
    <padding>
        <Insets top="30" right="50" bottom="30" left="50"/>
    </padding>
    
    <!-- Title -->
    <Label text="Create Account" styleClass="title">
        <font>
            <Font name="System Bold" size="32"/>
        </font>
    </Label>
    
    <Label text="Join CrowdAid Today" styleClass="subtitle">
        <font>
            <Font size="16"/>
        </font>
    </Label>
    
    <VBox spacing="12" alignment="CENTER" maxWidth="400">
        
        <!-- Name Field -->
        <VBox spacing="5">
            <Label text="Full Name:"/>
            <TextField fx:id="regNameField" promptText="Enter your full name" 
                      prefWidth="400" styleClass="text-field"/>
        </VBox>
        
        <!-- Email Field -->
        <VBox spacing="5">
            <Label text="Email Address:"/>
            <TextField fx:id="regEmailField" promptText="Enter your email" 
                      prefWidth="400" styleClass="text-field"/>
        </VBox>
        
        <!-- Password Field -->
        <VBox spacing="5">
            <Label text="Password:"/>
            <PasswordField fx:id="regPasswordField" promptText="At least 8 characters" 
                          prefWidth="400" styleClass="text-field"/>
        </VBox>
        
        <!-- Confirm Password Field -->
        <VBox spacing="5">
            <Label text="Confirm Password:"/>
            <PasswordField fx:id="regConfirmPasswordField" promptText="Re-enter your password" 
                          prefWidth="400" styleClass="text-field"/>
        </VBox>
        
        <!-- Phone Field (Optional) -->
        <VBox spacing="5">
            <Label text="Phone Number (Optional):"/>
            <TextField fx:id="regPhoneField" promptText="e.g., +1234567890" 
                      prefWidth="400" styleClass="text-field"/>
        </VBox>
        
        <!-- Role Selection -->
        <VBox spacing="8">
            <Label text="I want to:">
                <font>
                    <Font name="System Bold" size="12"/>
                </font>
            </Label>
            <RadioButton fx:id="donorRadio" text="Donate to campaigns (Donor)" 
                        styleClass="radio-button">
                <toggleGroup>
                    <ToggleGroup fx:id="roleGroup"/>
                </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="campaignerRadio" text="Create fundraising campaigns (Campaigner)" 
                        toggleGroup="$roleGroup" styleClass="radio-button"/>
        </VBox>
        
        <!-- Register Button -->
        <Button fx:id="registerButton" text="Create Account" onAction="#handleRegister"
                prefWidth="400" prefHeight="40" styleClass="primary-button">
            <font>
                <Font name="System Bold" size="14"/>
            </font>
        </Button>
        
        <!-- Login Link -->
        <HBox alignment="CENTER" spacing="5">
            <Label text="Already have an account?"/>
            <Hyperlink fx:id="loginLink" text="Login here" 
                      onAction="#handleLoginLink" styleClass="hyperlink"/>
        </HBox>
        
    </VBox>
    
</VBox>
