<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.crowdaid.controller.MySubscriptionsController"
            stylesheets="@../css/styles.css">
    
    <top>
        <VBox alignment="CENTER" spacing="10" styleClass="header-section">
            <padding>
                <Insets top="20" right="20" bottom="10" left="20"/>
            </padding>
            <Label text="My Subscriptions" styleClass="page-title">
                <font>
                    <Font name="System Bold" size="28"/>
                </font>
            </Label>
            <Label text="Manage your recurring campaign subscriptions" styleClass="subtitle"/>
        </VBox>
    </top>
    
    <center>
        <VBox spacing="20">
            <padding>
                <Insets top="20" right="30" bottom="20" left="30"/>
            </padding>
            
            <TableView fx:id="subscriptionsTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="campaignColumn" text="Campaign" prefWidth="250"/>
                    <TableColumn fx:id="tierColumn" text="Tier" prefWidth="150"/>
                    <TableColumn fx:id="amountColumn" text="Monthly Amount" prefWidth="120"/>
                    <TableColumn fx:id="startDateColumn" text="Start Date" prefWidth="120"/>
                    <TableColumn fx:id="nextPaymentColumn" text="Next Payment" prefWidth="120"/>
                    <TableColumn fx:id="statusColumn" text="Status" prefWidth="100"/>
                </columns>
            </TableView>
            
            <HBox spacing="15" alignment="CENTER">
                <Button fx:id="pauseButton" text="Pause Subscription" onAction="#handlePause" 
                        styleClass="secondary-button" prefWidth="150"/>
                <Button fx:id="cancelButton" text="Cancel Subscription" onAction="#handleCancel" 
                        styleClass="danger-button" prefWidth="150"/>
                <Button fx:id="backButton" text="Back to Dashboard" onAction="#handleBack" 
                        styleClass="secondary-button" prefWidth="150"/>
            </HBox>
        </VBox>
    </center>
    
</BorderPane>
